{
	"name": "yohowie/invo",
	"description": "使用phalcon4默认目录结构创建invo项目",
	"homepage": "http://www.howie.cc",
	"keywords": [
		"phalcon",
		"framework",
		"sample app",
		"invo"
	],
	"require": {
		"php": ">=7.4",
		"ext-phalcon": "^4.1.2",
		"phalcon/migrations": "^2.2.3",
		"vlucas/phpdotenv": "^5.3.0"
	},
	"require-dev": {
		"phalcon/ide-stubs": "^v4.0.0",
        "codeception/codeception": "~4.1",
		"codeception/module-phpbrowser": "^1.0.0",
		"codeception/module-asserts": "^1.0.0",
		"codeception/module-phalcon4": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Invo\\": "app/"
		}
	},
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
